{
  "name": "adonis-drive-azure-storage",
  "version": "5.0.1",
  "description": "Azure storage driver for AdonisJS drive",
  "main": "./build/providers/DriveProvider.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "copy:files": "copyfiles \"templates/*.txt\" build",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc && copyfiles instructions.md build",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/drive-gcs"
  },
  "files": [
    "build/instructions.md",
    "build/adonis-typings",
    "build/providers",
    "build/src"
  ],
  "keywords": [
    "adonisjs",
    "adonis-drive",
    "adonisjs-drive",
    "adonis-framework",
    "azure",
    "azure-storage",
    "blob",
    "storage",
    "drive"
  ],
  "author": "Alexander Wennerstr√∏m",
  "license": "MIT",
  "homepage": "https://github.com/AlexanderYW/Adonis-Drive-Azure-Storage#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexanderYW/Adonis-Drive-Azure-Storage"
  },
  "bugs": {
    "url": "https://github.com/AlexanderYW/Adonis-Drive-Azure-Storage/issues"
  },
  "devDependencies": {
    "@adonisjs/core": "^5.4.2",
    "@adonisjs/mrm-preset": "^5.0.2",
    "@adonisjs/require-ts": "^2.0.7",
    "@poppinss/dev-utils": "^2.0.0",
    "@types/node": "^17.0.15",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "github-label-sync": "^2.0.2",
    "got": "^12.0.0",
    "husky": "^7.0.4",
    "japa": "^4.0.0",
    "mrm": "^3.0.8",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "@azure/identity": "^2.0.1",
    "@azure/storage-blob": "^12.5.0",
    "@poppinss/utils": "^4.0.0"
  },
  "typings": "./build/adonis-typings/index.d.ts",
  "adonisjs": {
    "instructionsMd": "./build/instructions.md",
    "env": {
      "AZURE_CONTAINER": "containerName",
      "AZURE_CONNECTION_STRING": "UseDevelopmentStorage=true"
    },
    "types": "adonis-drive-azure-storage",
    "providers": [
      "adonis-drive-azure-storage"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
